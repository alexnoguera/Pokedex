<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.29" >

      
		<ImageView
		    android:id="@+id/resultPokemon"
		    android:layout_width = "wrap_content"
		    android:layout_height = "wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop = "40dp" />
		
        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="18dp"
            android:onClick="onPlay"
            android:text="@string/play" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="onClose"
            android:text="@string/back" />

        <TextView 
		    android:id="@+id/tvPokedexNumber"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_marginTop="170dp"
		    android:text="Number" />
        		<TextView 
		    android:id="@+id/tvName"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="170dp"
		    android:layout_marginLeft="20dp"
		    android:text="Pokemon Name Here" />
		
		<TextView 
		    android:id="@+id/tvType1"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="190dp"
		    android:text="Type1" />
		
		<TextView 
		    android:id="@+id/tvType2"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="190dp"
		    android:layout_marginLeft="60dp"
		    android:text="Type2" />
		<TextView 
		    android:id="@+id/tvAbility"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="210dp"
		    android:layout_marginLeft="0dp"
		    android:text="Ability" />
		
		<TextView 
		    android:id="@+id/tvHeight"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="230dp"
		    android:layout_marginLeft="0dp"
		    android:text="Height" />
		
		<TextView 
		    android:id="@+id/tvWeight"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="230dp"
		    android:layout_marginLeft="40dp"
		    android:text="Weight" />
		
		<TextView 
		    android:id="@+id/tvHp"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="0dp"
		    android:text="Hp" />
		
		<TextView 
		    android:id="@+id/tvAttack"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="40dp"
		    android:text="Attack" />
		
		<TextView 
		    android:id="@+id/tvDefense"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="80dp"
		    android:text="Defense" />
		
		<TextView 
		    android:id="@+id/tvspAttack"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="1200dp"
		    android:text="SpAttack" />
		
		<TextView 
		    android:id="@+id/tvspDefense"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="160dp"
		    android:text="SpDefense" />
		
		<TextView 
		    android:id="@+id/tvSpeed"
		    android:layout_width="wrap_content"
		    android:layout_height="20dp"
		    android:layout_marginTop="250dp"
		    android:layout_marginLeft="200dp"
		    android:text="Speed" />
		
		<TextView 
		    android:id="@+id/tvDescription"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="300dp"
		    android:text="Pokemon Description" />
        
		

    </RelativeLayout>

</LinearLayout>